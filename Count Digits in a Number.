#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  
    int i,k=0;
    scanf("%d",&i);
    if (i==0){
        k=1;
        
    }    
    else
    for(;i!=0;i=i/10){
        
        
        k++;
       
       
    } 
    printf("%d",k);
    

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
